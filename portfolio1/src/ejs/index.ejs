<% var title = "TOP"; var description = "トップのdescription"; %>

<!-- 画像相対パス -->
<% const path = ["../../assets/images/"]%>

<% include src/ejs/template/_head %>

<% include src/ejs/template/_header %>

<section class="p-top">
  <h1 class="p-top__main"><a href="#" class="p-top__mainLink"><img src="<% path %>main-symbol.png" alt="メインシンボル" class="p-top__symbol"></a></h1>
  <div class="p-top__nav">
    <a href="#" class="p-top__navLink">
      <img src="<%= path %>title08.png" alt="ポートフォリオサイト" class="p-top__img">
      <img src="<%= path %>title02.png" alt="もっと見る" class="p-top__more">
    </a>
  </div>
  <!-- /.p-top__side -->
</section>

<section class="p-gallery">
  <div class="p-gallery__inner">
    <div class="p-gallery__top">
      <a href="#" class="p-gallery__link">
        <div class="p-gallery__mask"></div>
        <img src="<%= path %>bicycle_1.jpg" alt="ギャラリー" class="p-gallery__img">
        <div class="p-gallery__txt">
          <h2 class="p-gallery__ttl">ポートフォリオ</h2>
          <h3 class="p-gallery__meta">2022/shibuya</h3>
          <span class="p-gallery__cat">new</span>
        </div>
      </a>
    </div>
    <!-- /.p-gallery__top -->

    <ul class="p-gallery__list">

      <% const gallery = [
        {src: "bicycle_2.jpg", ttl: "portfolio", place:"ohmiya"},
        {src: "bicycle_3.jpg", ttl: "ポートフォリオサイト", place:"shibuya"},
        {src: "bicycle_4.jpg", ttl: "cycle", place:"ikebukuro"},
        {src: "bicycle_5.jpg", ttl: "ロードバイク", place:"shinjuku"},
      ]; %>

      <% for(var i = 0; i<gallery.length; i++) { %>

      <li class="p-gallery__item">
        <a href="#" class="p-gallery__link">
          <div class="p-gallery__mask"></div>
          <img src="<%= path %><%= gallery[i].src %>" alt="ギャラリー" class="p-gallery__img">
          <div class="p-gallery__txt">
            <h2 class="p-gallery__ttl"><%= gallery[i].ttl %></h2>
            <h3 class="p-gallery__meta">2022/<%= gallery[i].place %> </h3>
          <span class="p-gallery__cat">new</span>
        </div>
        </a>
      </li>

      <% } %>

    </ul>
    <!-- /.p-gallery__imgs -->
  </div>
  <!-- /.p-gallery__inner -->
</section>

<section class="p-voice">
  <div class="p-voice__inner">
    <h2 class="c-sectionTtl">
      <img src="<%= path %>title03.png" alt="お客様の声" class="c-sectionTtl__img">
    </h2>

    <img src="<%= path %>bicycle_6.jpg" alt="サムネイル" class="p-voice__img">
    <h3 class="p-voice__cat">new</h3>
    <h4 class="p-voice__txt">ポートフォリオサイトと<br>ポートレートサイトは、<br>響きは似ているが意味が異なる</h４>
    <h2 class="p-voice__ttl">portfolio</h2>

    <a href="#" class="p-voice__more c-sectionMore">more</a>
  </div>
  <!-- /.p-voice__inner -->
</section>

<section class="p-news">
  <div class="p-news__inner">
    <h2 class="c-sectionTtl">
      <img src="<%= path %>title05.png" alt="お知らせ" class="c-sectionTtl__img">
    </h2>

    <ul class="p-news__list">

      <% const news = [
        {date: "2022/05/06", cat:"お知らせ", ttl:"新しい記事です。"},
        {date: "2022/05/05", cat:"News", ttl:"新しいNewsです。"},
        {date: "2022/05/04", cat:"ブログ", ttl:"新しいロードバイクです。"},
      ]; %>

      <% for(var i = 0; i < news.length; i++ ) {%>

      <li class="p-news__item">
        <a href="#" class="p-news__link">
          <div class="p-news__meta">
            <time class="p-news__date" datetime="<%= news[i].date %>"><%= news[i].date %></time>
            <span class="p-news__cat"><%= news[i].cat %></span>
          </div>
          <!-- /.p-news__meta -->
          <h2 class="p-news__itemTtl"><%= news[i].ttl %></h2>
        </a>
      </li>
      <% } %>

    </ul>
    <a href="#" class="p-news__more c-sectionMore">more</a>
  </div>
</section>

<section class="p-access">
  <div class="p-access__inner">
    <h2 class="c-sectionTtl">
      <img src="<%= path %>title09.png" alt="アクセス" class="c-sectionTtl__img">
    </h2>

    <h3 class="p-access__metaTtl">本社</h3>
    <div class="p-access__meta">
      <address class="p-access__address">東京都渋谷区神南1-20-2 第一清水ビル4F</address>
      <p class="p-access__tel">TEL 000-0000-0000(代表)</p>
      <p class="p-access__tel">FAX 000-0000-0000</p>
      <p class="p-access__hours">
        10:00~19:00 土日・祝日定休
      </p>
    </div>
    <!-- /.p-access__meta -->

    <iframe class="p-access__gmap" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3241.612738285934!2d139.69792791525828!3d35.6619117801988!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188ca88ae1bdff%3A0x6a162b1b76d106f!2z44CSMTUwLTAwNDEg5p2x5Lqs6YO95riL6LC35Yy656We5Y2X77yR5LiB55uu77yS77yQ4oiS77ySIOa4heawtOODk-ODqyA0Zg!5e0!3m2!1sja!2sjp!4v1652147882647!5m2!1sja!2sjp" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  <!-- /.p-access__inner -->
</section>

<section class="p-contact">
  <div class="p-contact__inner">
    <h2 class="c-sectionTtl">
      <img src="<%= path %>title06.png" alt="お問い合わせ" class="c-sectionTtl__img">
    </h2>

    <a href="#" class="p-contact__btn">お問い合わせはこちら</a>
    <a href="tel:000-0000-0000" class="p-contact__tel"><img src="<%= path %>title06.png" alt="お電話でお問い合わせ" class="p-contact__telImg"></a>
  </div>
  <!-- /.p-contact__inner -->
</section>


<% include src/ejs/template/_footer %>
