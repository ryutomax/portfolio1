<% var title = "TOP"; var description = "トップのdescription"; %>

<!-- 画像相対パス -->
<% const path = ["../../assets/images/"]%>

<% include src/ejs/template/_head %>

<% include src/ejs/template/_header %>

<section class="p-top">
  <div class="p-top__inner">

    <h1 class="p-top__main">
      <a href="#" class="p-top__mainLink">
        <img src="<%= path %>main-symbol.png" alt="メインシンボル" class="p-top__symbol">
      </a>
    </h1>

    <div class="p-top__nav">
      <a href="#" class="p-top__navLink">

        <img src="<%= path %>title02.png" alt="もっと見る" class="p-top__more">

        <div class="p-top__navFrame">
          <img src="<%= path %>arrow.svg" alt="矢印" class="p-top__navArrow">
        </div>
        <img src="<%= path %>title08.png" alt="ポートフォリオサイト"  class="p-top__img c-ttl__img">

      </a>
    </div>
    <!-- /.p-top__side -->

  </div>
  <!-- /.p-top__inner -->

</section>

<section class="p-gallery">
  <div class="p-gallery__inner">
    <div class="p-gallery__top">
      <a href="#" class="p-gallery__link">
        <div class="p-gallery__mask"></div>
        <img src="<%= path %>bicycle_1.jpg" alt="ギャラリー" class="p-gallery__img">
        <div class="p-gallery__txt">
          <h2 class="p-gallery__ttl">ポートフォリオ</h2>
          <h3 class="p-gallery__meta">2022 / shibuya</h3>
          <span class="p-gallery__cat">new</span>
        </div>
      </a>
    </div>
    <!-- /.p-gallery__top -->

    <ul class="p-gallery__list">

      <% const gallery = [
        {src: "bicycle_2.jpg", ttl: "portfolio", place:"ohmiya"},
        {src: "bicycle_3.jpg", ttl: "ポートフォリオサイト", place:"shibuya"},
        {src: "bicycle_4.jpg", ttl: "cycle", place:"ikebukuro"},
        {src: "bicycle_5.jpg", ttl: "ロードバイク", place:"shinjuku"},
      ]; %>

      <% for(var i = 0; i<gallery.length; i++) { %>

      <li class="p-gallery__item">
        <a href="#" class="p-gallery__link">
          <div class="p-gallery__mask"></div>
          <img src="<%= path %><%= gallery[i].src %>" alt="ギャラリー" class="p-gallery__imgS">
          <div class="p-gallery__txt">
            <h2 class="p-gallery__ttl"><%= gallery[i].ttl %></h2>
            <h3 class="p-gallery__meta">2022 / <%= gallery[i].place %> </h3>
          <span class="p-gallery__cat">new</span>
        </div>
        </a>
      </li>

      <% } %>

    </ul>
    <!-- /.p-gallery__imgs -->
  </div>
  <!-- /.p-gallery__inner -->
</section>

<section class="p-voice c-section">
  <div class="p-voice__inner c-section__inner">
    <h2 class="c-ttl">
      <img src="<%= path %>title03.png" alt="お客様の声" class="c-ttl__img">
    </h2>

    <div class="p-voice__main c-section__main">

      <a href="#" class="p-voice__link">
        <img src="<%= path %>bicycle_6.jpg" alt="サムネイル" class="p-voice__img">
      </a>

      <div class="p-voice__meta">
        <h3 class="p-voice__cat">new</h3>
        <h4 class="p-voice__txt">ポートフォリオサイトと<br>ポートレートサイトは、<br>響きは似ているが意味が異なる</h４>
        <h2 class="p-voice__ttl">portfolio</h2>

        <a href="#" class="c-more">
          <p class="c-more__txt"><span>read</span>more</p>
          <div class="c-more__frame">
            <img src="<%= path %>arrow.svg" alt="矢印" class="c-more__arrow">
          </div>
        </a>
      </div>
      <!-- /.p-voice__meta -->

    </div>
    <!-- /.p-voice__main -->

  </div>
  <!-- /.p-voice__inner -->
</section>

<section class="p-news c-section">
  <div class="p-news__inner c-section__inner">
    <h2 class="c-ttl">
      <img src="<%= path %>title05.png" alt="お知らせ" class="c-ttl__img">
    </h2>

    <div class="p-news__main c-section__main">
      <ul class="p-news__list">

        <% const news = [
          {date: "2022/05/06", cat:"お知らせ", ttl:"新しい記事です。"},
          {date: "2022/05/05", cat:"News", ttl:"新しいNewsです。"},
          {date: "2022/05/04", cat:"ブログ", ttl:"新しいロードバイクです。"},
        ]; %>

        <% for(var i = 0; i < news.length; i++ ) {%>

        <li class="p-news__item">
            <div class="p-news__meta">
              <time class="p-news__date" datetime="<%= news[i].date %>"><%= news[i].date %></time>
              <a href="#" class="p-news__cat"><%= news[i].cat %></a>
            </div>
            <!-- /.p-news__meta -->
            <h2 class="p-news__itemTtl"><a href="#" class="p-news__link"><%= news[i].ttl %></a></h2>
        </li>
        <% } %>

      </ul>

      <a href="#" class="p-news__more c-more">
        <p class="c-more__txt">more</p>
        <div class="c-more__frame">
          <img src="<%= path %>arrow.svg" alt="矢印" class="c-more__arrow">
        </div>
      </a>
    </div>
    <!-- /.p-news__main -->

  </div>
  <!-- /.p-news__inner -->
</section>

